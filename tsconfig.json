{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "./src/ts",
    "outDir": "./dist/js",
    "noEmitOnError": true,
    "jsx": "react"
  },
  "include": ["./src/ts"],
  "exclude": [
    "./src/ts/**/__tests__/**/*.ts",
    "./src/ts/**/*.spec.ts",
    "./src/ts/**/*.test.ts"
  ]
}
